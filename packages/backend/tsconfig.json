{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "removeComments": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "target": "ES2020",
    "typeRoots": ["src/@types"]
  },
  "include": ["src"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": true,
    "swc": true,
    "experimentalSpecifierResolution": "node",
    "require": ["dotenv/config", "tsconfig-paths/register"],
    "compilerOptions": {
      "module": "ESNext"
    }
  }
}
